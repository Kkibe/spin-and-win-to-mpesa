<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="shortcut icon" href="login.jpg" type="image/png">
  <link rel="apple-touch-icon" href="login.jpg">
  <title>Dashboard  | Spin & Earn To Mpesa</title>
  <link rel="stylesheet" href="https://demo.targetconnect.net/css/gzip_N824701711/bundle/style.css">
  <link href="https://demo.targetconnect.net/ext/thm/v2/4.1.11/coventry.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,300,600" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>

<body id="container" class="page-main page-student romeo target-connect">
  <div id="page">
    <div id="content">
      <div class="dashboard-content ml-2 mr-2 mt-1 mb-4" >
        <section>
          <div class="card-header bg-white border-0">
            <% if (message) {%>
              <div class="alert alert-dismissible fade show alert alert-<%= message.type %>" role="alert">
               <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
               <strong><%= message.message %></strong>
              </div>
             <% } %>
            <div class="row align-items-space-center">
              <div class="col-4 text-left">
                <h6 class="mb-0">Balance: </h6>
              </div>
              <div class="col-4 text-left">
                <h6 class="mb-0" id="balance">ðŸ’° <%= user.balance %></h6>
              </div>
              <div class="col-4 text-center">
                <h6 class="mb-0" id="gems">ðŸ’Ž 0</h6>
              </div>
            </div>
          </div>

          <div class="card-header bg-white border-0 pt-4 pb-4">
            <div class="row align-items-center">
              <div class="col-12 text-left">
                <a href="/deposit" class="btn btn-sm btn-primary">ACTIVATE ACCOUNT<i class="fal fa-chevron-circle-right jobs-more-icon"></i></a>
              </div>
            </div>
          </div>
        </section>

        <section>
          <div class="card-body">
            <form>
              <h6 class="heading-small text-muted mb-4">User information</h6>
              <div class="pl-lg-4">
                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group focused">
                      <label class="form-control-label" for="input-username">Phone</label>
                      <input type="text" id="input-username" class="form-control form-control-alternative" placeholder="Username" value="<%= user.phone %>">
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label class="form-control-label" for="input-email">Email address</label>
                      <input type="email" id="input-email" class="form-control form-control-alternative" placeholder="youremail@example.com" value="<%= user.lastName %>">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group focused">
                      <label class="form-control-label" for="input-first-name">Firts Name</label>
                      <input type="text" id="input-first-name" class="form-control form-control-alternative" placeholder="First name" value="<%= user.firstName %>">
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group focused">
                      <label class="form-control-label" for="input-last-name">Last Name</label>
                      <input type="text" id="input-last-name" class="form-control form-control-alternative" placeholder="Last name" value="<%= user.lastName %>">
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <div class="row align-items-center">
              <div class="col-12 text-right">
                <a href="/logout" class="btn btn-sm btn-primary">SIGN OUT<i class="fal fa-chevron-circle-right jobs-more-icon"></i></a>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
  <script>
    let balance = parseFloat(localStorage.getItem('balance')) || 0;
    const balanceDiv = document.querySelector('#balance');
    balanceDiv.textContent = `ðŸ’° ${balance}`
  </script>
</body>
</html>
